---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a"> & {
	active: boolean;
	className?: string;
};

const { active = false, className = "", ...props } = Astro.props;
---

<a
	class:list={[
		"px-4 py-2 gap-4 rounded-lg min-w-max inline-flex items-center justify-between cursor-pointer",
		active
			? "border-blue-500 text-white font-medium bg-blue-500 hover:bg-blue-600 transition-all ease-in-out duration-200"
			: "bg-white hover:bg-gray-50",
		className,
	]}
	{...props}
>
	<slot />
</a>
