---
import Layout from "@/layouts/Layout.astro";
import Breadcrumb from "@/components/Breadcrumb.astro";
import PrimaryButton from "@/components/PrimaryButton";
import DashboardCategoryWrapper from "@/components/wrapper/DashboardCategoryWrapper";
---

<Layout title="Dashboard Categories">
  <Breadcrumb />
  <div>
    <div
      class="flex flex-col md:flex-row md:justify-between md:items-center mb-2 gap-2 md:gap-0"
    >
      <div class="flex items-center justify-between">
        <h1 class="font-medium text-lg">Categories List</h1>

        <a href="/dashboard/category/create">
          <PrimaryButton type="button" className="md:hidden">
            Create Category
          </PrimaryButton>
        </a>
      </div>

      <div class="flex items-center gap-2">
        <a href="/dashboard/category/create">
          <PrimaryButton type="button" className="hidden md:block">
            Create Category
          </PrimaryButton>
        </a>
      </div>
    </div>

    <DashboardCategoryWrapper client:visible />
  </div>
</Layout>
